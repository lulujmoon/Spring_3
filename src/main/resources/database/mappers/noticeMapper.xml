<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.redbeet.s3.notice.NoticeDAO">
	
	<select id="getList" resultType="NoticeDTO">
		select * from notice order by num desc
	</select>

	<select id="getSelect" parameterType="NoticeDTO" resultType="NoticeDTO">
		select * from notice where num=#{num}
	</select>
	
	<insert id="setInsert" parameterType="NoticeDTO">
		insert into notice values (ntc_seq.nextval, #{subject}, '관리자', sysdate, 0, #{content})
	</insert>
	
	<update id="setUpdate" parameterType="NoticeDTO">
		update notice set subject=#{subject}, content=#{content} where num=#{num}
	</update>
	
	<delete id="setDelete" parameterType="NoticeDTO">
		delete notice where num=#{num}
	</delete>

	<update id="setHitUpdate" parameterType="NoticeDTO">
		update notice set hit= hit+1 where num=#{num}
	</update>

</mapper>